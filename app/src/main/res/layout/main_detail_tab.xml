<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/detailed_app_source_label"
        style="@style/AppDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:nextFocusForward="@id/detailed_app_source"
        android:text="@string/detailed_app_origin_source"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/offline_trust_label" />


    <TextView
        android:id="@+id/detailed_app_source"
        style="@style/AppDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:nextFocusForward="@id/first_install_time_label"
        android:text="@string/gp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/detailed_app_source_label"
        app:layout_constraintTop_toBottomOf="@+id/offline_trust" />


    <TextView
        android:id="@+id/detailed_app_last_run_time"
        style="@style/AppDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:text="@string/undefined"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_app_last_run_time_label" />


    <TextView
        android:id="@+id/detailed_app_last_update_time_label"
        style="@style/AppDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:nextFocusForward="@id/detailed_app_last_update_time"
        android:layout_marginTop="8dp"
        android:text="@string/last_update_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_install_time" />


    <TextView
        android:id="@+id/detailed_app_last_update_time"
        style="@style/AppDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:nextFocusForward="@id/list_app_last_run_time_label"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/undefined"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailed_app_last_update_time_label" />


    <TextView
        android:id="@+id/list_app_last_run_time_label"
        style="@style/AppDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:nextFocusForward="@id/detailed_app_last_update_time"
        android:text="@string/last_run_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailed_app_last_update_time" />


    <TextView
        android:id="@+id/first_install_time_label"
        style="@style/AppDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:nextFocusForward="@id/first_install_time"
        android:layout_marginTop="8dp"
        android:text="@string/first_install_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailed_app_source_label" />

    <TextView
        android:id="@+id/first_install_time"
        style="@style/AppDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:nextFocusForward="@id/detailed_app_last_update_time_label"
        android:layout_marginTop="8dp"
        android:text="@string/undefined"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_install_time_label" />

    <TextView
        android:id="@+id/offline_trust_label"
        style="@style/AppDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/trust_level_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/offline_trust"
        style="@style/AppDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/undefined"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/offline_trust_label"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>