        <TextView
            android:id="@+id/detailed_app_source_label"
            style="@style/AppDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/detailed_app_origin_source"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/trust_level_label" />


        <TextView
            android:id="@+id/detailed_app_source"
            style="@style/AppDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/google_play"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/detailed_app_source_label"
            app:layout_constraintTop_toBottomOf="@+id/trust_level_label" />

        <TextView
            android:id="@+id/detailed_app_internet_access_label"
            style="@style/AppDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/internet_access"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailed_app_source_label" />

        <TextView
            android:id="@+id/detailed_app_internet_access"
            style="@style/AppDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="@string/yes"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/detailed_app_internet_access_label"
            app:layout_constraintTop_toBottomOf="@+id/detailed_app_source" />


        <TextView
            android:id="@+id/detailed_app_last_run_time"
            style="@style/AppDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:text="@string/undefined"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/list_app_last_run_time_label" />


        <TextView
            android:id="@+id/detailed_app_last_update_time_label"
            style="@style/AppDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/last_update_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/first_install_time" />


        <TextView
            android:id="@+id/detailed_app_last_update_time"
            style="@style/AppDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/undefined"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailed_app_last_update_time_label" />

        <TextView
            android:id="@+id/requested_app_permissions_label"
            style="@style/AppDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:text="@string/requested_app_permissions"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.004"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailed_app_last_run_time" />

        <TextView
            android:id="@+id/requested_app_permissions"
            style="@style/AppDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/undefined"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/requested_app_permissions_label" />


        <TextView
            android:id="@+id/granted_app_permissions_label"
            style="@style/AppDescription"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/granted_app_permissions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/requested_app_permissions" />

        <TextView
            android:id="@+id/granted_app_permissions"
            style="@style/AppDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:text="@string/undefined"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/granted_app_permissions_label" />


        <TextView
            android:id="@+id/list_app_last_run_time_label"
            style="@style/AppDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/last_run_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailed_app_last_update_time" />


        <TextView
            android:id="@+id/list_app_last_run_time"
            style="@style/AppDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="15dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/trust_level_label"
            style="@style/AppDescriptionBig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="28dp"
            android:text="@string/trust_level_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailed_app_version_label" />

        <TextView
            android:id="@+id/trust_level"
            style="@style/AppDescriptionBig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="@string/high"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.243"
            app:layout_constraintStart_toEndOf="@+id/trust_level_label"
            app:layout_constraintTop_toBottomOf="@+id/detailed_app_version" />

        <TextView
            android:id="@+id/first_install_time_label"
            style="@style/AppDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/first_install_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailed_app_internet_access_label" />

        <TextView
            android:id="@+id/first_install_time"
            style="@style/AppDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/undefined"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/first_install_time_label" />




    </android.support.constraint.ConstraintLayout>

    </ScrollView>